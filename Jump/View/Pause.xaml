<UserControl x:Class="Jump.View.Pause"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jump.View"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    <Viewbox Stretch="Fill">
        <Canvas Height="650" Width="1000">
            <Rectangle Width="1000" Height="650" Focusable="False" Fill="Black" Opacity="0.5"/>
            <Rectangle Height="180" Width="1000" HorizontalAlignment="Center" Canvas.Top="235" VerticalAlignment="Top" Fill="#FF4B4454" Opacity="0.6"/>
            <TextBlock Text="PAUSE" Width="200" Height="83" FontSize="60" TextAlignment="Center" Foreground="White" Canvas.Left="400" Canvas.Top="242" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="Resume" Height="44" Width="152" Canvas.Left="295" Canvas.Top="348" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Button x:Name="Quit" Height="44" Width="152" Canvas.Left="550" Canvas.Top="348" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.675,0.576" />
        </Canvas>
    </Viewbox>
</UserControl>
